<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" hint="COM_REDSCRIBBLE_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />
		  <field name="client" type="sql" query="SELECT id, client_name FROM #__redscribble_clients WHERE state = 1" key_field="id" value_field="client_name" required="true" label="COM_REDSCRIBBLE_FORM_LBL_CLIENTLOCATION_CLIENT" description="COM_REDSCRIBBLE_FORM_DESC_CLIENTLOCATION_CLIENT" hint="COM_REDSCRIBBLE_FORM_LBL_CLIENTLOCATION_CLIENT" onchange="this.form.submit();">
		  <option value="">Select client</option>
		  </field>
        

    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_CONTENT_LIST_FULL_ORDERING"
               description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.`id` asc">ID Ascending</option><option value="a.`id` desc">ID Descending</option><option value="a.`ordering` asc">Order Ascending</option><option value="a.`ordering` desc">Order Descending</option><option value="a.`state` asc">State Ascending</option><option value="a.`state` desc">State Descending</option><option value="a.`client` asc">Client Ascending</option><option value="a.`client` desc">Client Descending</option>

        </field>

        <field name="limit"
               type="limitbox"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>